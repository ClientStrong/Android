<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/profile_icon_width"
            android:layout_height="@dimen/profile_cell_height"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/colorAccent"
            android:padding="@dimen/profile_icon_padding"
            android:layout_marginEnd="@dimen/profile_icon_margin_end"
            android:tint="@color/colorPrimaryDark" />
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/profile_cell_height"
            android:gravity="center_vertical"
            android:textSize="@dimen/profile_cell_text_size" />
    </LinearLayout>
</merge>